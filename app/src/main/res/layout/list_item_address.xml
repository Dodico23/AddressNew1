<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/list_item_address_person_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="ФИО клиента"/>

    <TextView
        android:id="@+id/list_item_address_street_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:padding="20dp"
        android:textStyle="bold"
        tools:text="Улица" />

    <TextView
        android:id="@+id/list_item_address_building_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:padding="40dp"
        tools:text="Здание"/>
    <TextView
        android:id="@+id/list_item_address_office_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:padding="60dp"
        tools:text="Офис"/>


</RelativeLayout>
